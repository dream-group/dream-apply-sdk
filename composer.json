{
    "name": "dream-group/dream-apply-sdk",
    "description": "Dream Apply SDK",
    "type": "library",
    "license": "private",
    "authors": [
        {
            "name": "Anton Smirnov",
            "email": "anton.smirnov@dreamapply.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "php-http/discovery": false
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Dream\\Apply\\Client\\": ["gen", "src"]
        },
        "files": [
            "bootstrap.php"
        ]
    },
    "require": {
        "php": ">= 5.5",
        "ext-json": "*",
        "fig/http-message-util": "^1.1",
        "php-http/discovery": "^1.0",
        "php-http/httplug": "^1 | ^2"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "*",
        "nyholm/psr7": "^1.5",
        "php-http/curl-client": "*",
        "php-http/message-factory": "^1.1",
        "phpcompatibility/php-compatibility": "*",
        "psy/psysh": "*",
        "squizlabs/php_codesniffer": "*"
    },
    "suggest": {
        "psr/http-client-implementation": "PSR-18 or HTTPlug compatible client is required",
        "php-http/client-implementation": "PSR-18 or HTTPlug compatible client is required"
    }
}
